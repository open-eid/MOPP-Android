<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/material_list_text_first_position_margin_start"
    android:paddingTop="@dimen/material_list_text_only_margin_horizontal"
    android:paddingEnd="@dimen/material_list_text_last_position_margin_end"
    android:paddingBottom="@dimen/material_list_text_only_margin_horizontal"
    android:orientation="horizontal"
    android:background="@color/primary">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Application.Label"
            android:text="@string/signature_update_name" />

        <TextView
            android:id="@id/signatureUpdateListName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:singleLine="true"
            android:ellipsize="middle" />
    </LinearLayout>

    <ImageButton
        android:id="@id/signatureUpdateListNameUpdateButton"
        style="@style/Widget.Application.Button.Borderless.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_list_text_first_position_margin_start"
        android:src="@drawable/ic_icon_edit"
        android:contentDescription="@string/signature_update_name_update_button" />

</LinearLayout>
