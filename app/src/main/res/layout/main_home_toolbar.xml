<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="android.support.v7.widget.Toolbar"
    tools:layout_width="match_parent"
    tools:layout_height="wrap_content">

    <ImageView
        android:id="@id/mainHomeToolbarLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/main_home_toolbar_logo"
        android:contentDescription="@string/application_name" />

    <ImageButton
        android:id="@id/mainHomeToolbarOverflow"
        style="?attr/actionOverflowButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_more_vert"
        android:contentDescription="@string/main_home_menu_button" />

</merge>
