<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_browse_containers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ee.ria.DigiDoc.activity.BrowseContainersActivity"
    tools:showIn="@layout/activity_browse_containers"
    android:focusableInTouchMode="true">

    <SearchView
        android:id="@+id/listSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="false"
        android:queryHint="@string/search"/>

    <fragment
        android:id="@+id/browseContainersListFragment"
        android:name="ee.ria.DigiDoc.fragment.BrowseContainersListFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
